<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/title_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="titulo"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="25sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/gif_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ver animaciÃ³n"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="25sp"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_carousel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"

                android:layout_weight="0.5"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ver imagenes"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="25sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">


            <LinearLayout
                android:id="@+id/video_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ver video"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/audio_dialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"

                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Escuchar audio"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="25sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>