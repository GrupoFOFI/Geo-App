<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryWhite"
    android:gravity="center">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/palabra"
        android:textSize="25sp"
        android:text="Palabra"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_margin="5dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/palabra"
        android:id="@+id/scrollDef">
        <TextView
            android:gravity="left"
            android:id="@+id/definicion"
            android:textSize="20sp"
            android:text="definicion"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />

    </ScrollView>

    <ImageView
        android:layout_below="@+id/scrollDef"
        android:id="@+id/status_audio"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:tint="#000000"
        android:layout_centerInParent="true"
        />

</RelativeLayout>